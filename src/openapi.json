{
  "openapi": "3.0.0",
  "info": {
    "title": "MaeMob",
    "version": "1.0.0",
    "description": "サッカーゲームのリーグ管理用API"
  },
  "paths": {
    "/api/conventions": {
      "get": {
        "summary": "大会一覧の取得",
        "responses": {
          "200": {
            "description": "大会一覧の取得",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Convention"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "大会の登録",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewConvention"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "大会の登録が成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Convention"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/conventions/{convention_id}/players": {
      "get": {
        "summary": "プレイヤー一覧の取得",
        "description": "大会参加プレイヤーを勝ち点順で取得",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "プレイヤーのリスト",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Player"
                  }
                }
              }
            }
          },
          "404": {
            "description": "指定された大会は存在しません"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "summary": "プレイヤーの登録",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewPlayer"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "新しいプレイヤーが登録されました",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "指定された大会は存在しません"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/conventions/{convention_id}/player/{id}": {
      "get": {
        "summary": "プレイヤーの取得",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "プレイヤー情報",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          },
          "400": {
            "description": "IDの指定がUUID形式ではない"
          },
          "404": {
            "description": "該当するIDのユーザーが存在しない"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/conventions/{convention_id}/matches": {
      "get": {
        "summary": "試合一覧の取得",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "試合のリスト",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Match"
                  }
                }
              }
            }
          },
          "404": {
            "description": "指定された大会は存在しません"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "summary": "試合結果の登録",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewMatch"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "試合結果が登録されました",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Match"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "指定された大会は存在しません"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/conventions/{convention_id}/matches/{match_id}/scorers": {
      "get": {
        "summary": "試合の得点者の一覧を取得",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "path",
            "name": "match_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "得点者のリスト",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Scorer"
                  }
                }
              }
            }
          },
          "404": {
            "description": "指定された大会もしくは試合が存在しない"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "得点者の登録",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "path",
            "name": "match_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewScorer"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "得点者の登録成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Scorer"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "指定された大会もしくは試合は存在しません"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/conventions/{convention_id}/matches/{match_id}/assists": {
      "get": {
        "summary": "試合のアシストの一覧を取得",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "path",
            "name": "match_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "アシストのリスト",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Assist"
                  }
                }
              }
            }
          },
          "404": {
            "description": "指定された大会もしくは試合が存在しない"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "アシストの登録",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "path",
            "name": "match_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewAssist"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "アシストの登録成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Assist"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "指定された大会もしくは試合は存在しません"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/scorers": {
      "get": {
        "summary": "得点ランキングを取得",
        "description": "クエリパラメータで大会・プレイヤーごとのランキングを取得可能",
        "parameters": [
          {
            "in": "query",
            "name": "convention_id",
            "required": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "query",
            "name": "player_id",
            "required": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "得点者のランキングを取得",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ScorerRank"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid Input"
          },
          "404": {
            "description": "指定した大会もしくはプレイヤーが存在しない"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/assists": {
      "get": {
        "summary": "アシストランキングを取得",
        "description": "クエリパラメータで大会・プレイヤーごとのランキングを取得可能",
        "parameters": [
          {
            "in": "query",
            "name": "convention_id",
            "required": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "query",
            "name": "player_id",
            "required": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "アシストランキングを取得",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AssistRank"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid Input"
          },
          "404": {
            "description": "指定した大会もしくはプレイヤーが存在しない"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Convention": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid"},
          "name": { "type": "string", "example": "League 1"},
          "held_date": { "type": "string", "format": "date", "example": "2024-10-25" }
        }
      },
      "NewConvention": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "held_date": { "type": "string", "format": "date", "example": "2024-10-25" }
        },
        "required": [ "name" ]
      },
      "Player": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string", "example": "Taro" },
          "points": { "type": "integer", "example": 3 },
          "wins": { "type": "integer", "example": 1},
          "draws": { "type": "integer", "example": 1},
          "losses": { "type": "integer", "example": 1},
          "goals": { "type": "integer", "example": 1},
          "concede": {"type": "integer", "example": 1}
        }
      },
      "NewPlayer": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Taro" }
        },
        "required": [
          "name"
        ]
      },
      "Match": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "homePlayerId": { "type": "string", "format": "uuid" },
          "awayPlayerId": { "type": "string", "format": "uuid" },
          "homeScore": { "type": "integer", "example": 2 },
          "awayScore": { "type": "integer", "example": 1 },
          "match_date": { "type": "string", "format": "date-time" }
        }
      },
      "NewMatch": {
        "type": "object",
        "properties": {
          "homePlayerId": { "type": "string", "format": "uuid" },
          "awayPlayerId": { "type": "string", "format": "uuid" },
          "homeScore": { "type": "integer", "example": 2, "minimum": 0 },
          "awayScore": { "type": "integer", "example": 1, "minimum": 0 }
        },
        "required": [
          "homePlayerId",
          "awayPlayerId",
          "homeScore",
          "awayScore"
        ]
      },
      "Scorer": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "match_id": { "type": "string", "format": "uuid" },
          "player_id": { "type": "string", "format": "uuid" },
          "name": { "type": "string", "example": "Leo Messi"}
        }
      },
      "NewScorer": {
        "type": "object",
        "properties": {
          "player_id": { "type": "string", "format": "uuid" },
          "name": { "type": "string", "example": "Leo Messi"}
        },
        "required": [
          "player_id",
          "name"
        ]
      },
      "Assist": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "player_id": { "type": "string", "format": "uuid" },
          "match_id": { "type": "string", "format": "uuid" },
          "name": { "type": "string", "example": "Iniesta"}
        }
      },
      "NewAssist": {
        "type": "object",
        "properties": {
          "player_id": { "type": "string", "format": "uuid" },
          "name": { "type": "string", "example": "Iniesta"}
        },
        "required": [
          "player_id",
          "name"
        ]
      },
      "ScorerRank": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "player_id": { "type": "string", "format": "uuid" },
          "player_name": { "type": "string", "example": "player1"},
          "name": { "type": "integer", "example": "Leo Messi" },
          "scorer_count": { "type": "number", "minimum": 1, "example": 10 }
        }
      },
      "AssistRank": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "player_id": { "type": "string", "format": "uuid" },
          "player_name": { "type": "string", "example": "player1"},
          "name": { "type": "integer", "example": "Iniesta" },
          "assist_count": { "type": "number", "minimum": 1, "example": 10 }
        }
      }
    }
  }
}
