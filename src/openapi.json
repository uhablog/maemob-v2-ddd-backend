{
  "openapi": "3.0.0",
  "info": {
    "title": "MaeMob",
    "version": "1.0.0",
    "description": "サッカーゲームのリーグ管理用API"
  },
  "paths": {
    "/api/conventions": {
      "get": {
        "summary": "大会一覧の取得",
        "responses": {
          "200": {
            "description": "大会一覧の取得",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Convention"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "大会の登録",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewConvention"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "大会の登録が成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Convention"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/conventions/{convention_id}/players": {
      "get": {
        "summary": "プレイヤー一覧の取得",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "プレイヤーのリスト",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Player"
                  }
                }
              }
            }
          },
          "404": {
            "description": "指定された大会は存在しません"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "summary": "プレイヤーの登録",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewPlayer"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "新しいプレイヤーが登録されました",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "指定された大会は存在しません"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/conventions/{convention_id}/player/{id}": {
      "get": {
        "summary": "プレイヤーの取得",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "プレイヤー情報",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          },
          "400": {
            "description": "IDの指定が数字ではない"
          },
          "404": {
            "description": "該当するIDのユーザーが存在しない"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/conventions/{convention_id}/matches": {
      "get": {
        "summary": "試合一覧の取得",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "試合のリスト",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Match"
                  }
                }
              }
            }
          },
          "404": {
            "description": "指定された大会は存在しません"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "summary": "試合結果の登録",
        "parameters": [
          {
            "in": "path",
            "name": "convention_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewMatch"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "試合結果が登録されました",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Match"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "指定された大会は存在しません"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Convention": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid"},
          "name": { "type": "string", "example": "League 1"},
          "held_date": { "type": "string", "format": "date", "example": "2024-10-25" }
        }
      },
      "NewConvention": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "held_date": { "type": "string", "format": "date", "example": "2024-10-25" }
        },
        "required": [ "name" ]
      },
      "Player": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "name": { "type": "string", "example": "Taro" },
          "points": { "type": "integer", "example": 3 }
        }
      },
      "NewPlayer": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Taro" }
        },
        "required": [
          "name"
        ]
      },
      "Match": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "homePlayerId": { "type": "integer", "example": 1 },
          "awayPlayerId": { "type": "integer", "example": 2 },
          "homeScore": { "type": "integer", "example": 2 },
          "awayScore": { "type": "integer", "example": 1 },
          "match_date": { "type": "string", "format": "date-time" }
        }
      },
      "NewMatch": {
        "type": "object",
        "properties": {
          "homePlayerId": { "type": "integer", "example": 1 },
          "awayPlayerId": { "type": "integer", "example": 2 },
          "homeScore": { "type": "integer", "example": 2, "minimum": 0 },
          "awayScore": { "type": "integer", "example": 1, "minimum": 0 }
        },
        "required": [
          "homePlayerId",
          "awayPlayerId",
          "homeScore",
          "awayScore"
        ]
      }
    }
  }
}
