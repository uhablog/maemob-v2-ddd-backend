{
  "openapi": "3.0.0",
  "info": {
    "title": "MaeMob",
    "version": "1.0.0",
    "description": "サッカーゲームのリーグ管理用API"
  },
  "paths": {
    "/api/players": {
      "get": {
        "summary": "プレイヤー一覧の取得",
        "responses": {
          "200": {
            "description": "プレイヤーのリスト",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Player"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/player": {
      "post": {
        "summary": "プレイヤーの登録",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewPlayer"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "新しいプレイヤーが登録されました",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/player/{id}": {
      "get": {
        "summary": "プレイヤーの取得",
        "responses": {
          "200": {
            "description": "プレイヤー情報",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          },
          "400": {
            "description": "IDの指定が数字ではない"
          },
          "404": {
            "description": "該当するIDのユーザーが存在しない"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/matches": {
      "get": {
        "summary": "試合一覧の取得",
        "responses": {
          "200": {
            "description": "試合のリスト",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Match"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/match": {
      "post": {
        "summary": "試合結果の登録",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewMatch"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "試合結果が登録されました",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Match"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Player": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "name": { "type": "string", "example": "Taro" },
          "points": { "type": "integer", "example": 3 }
        }
      },
      "NewPlayer": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Taro" }
        },
        "required": [
          "name"
        ]
      },
      "Match": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "homePlayerId": { "type": "integer", "example": 1 },
          "awayPlayerId": { "type": "integer", "example": 2 },
          "homeScore": { "type": "integer", "example": 2 },
          "awayScore": { "type": "integer", "example": 1 },
          "match_date": { "type": "string", "format": "date-time" }
        }
      },
      "NewMatch": {
        "type": "object",
        "properties": {
          "homePlayerId": { "type": "integer", "example": 1 },
          "awayPlayerId": { "type": "integer", "example": 2 },
          "homeScore": { "type": "integer", "example": 2, "minimum": 0 },
          "awayScore": { "type": "integer", "example": 1, "minimum": 0 }
        },
        "required": [
          "homePlayer",
          "awayPlayer",
          "homeScore",
          "awayScore"
        ]
      }
    }
  }
}
